generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(uuid()) // Clerk User ID
  name          String
  email         String   @unique
  income        Int? // Optional
  scholarships  Scholarship[]
  createdAt     DateTime @default(now())
}

model Scholarship {
  id          String  @id @default(uuid())
  name        String
  description String
  eligibility Float // Changed from Int to Float
  userId      String  // Required Foreign Key
  user        User   @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
}
